    <RatingBar 
        android:id="@+id/scoreBar"
        android:numStars="3"
        android:rating="3"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />
    <TextView
        android:id="@+id/Completeness"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completeness: " 
        android:layout_below="@id/scoreBar"
        />
    <TextView
        android:id="@+id/improveCompleteness"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:layout_below="@id/Completeness"
        android:text="*To Improve Completeness, use fewer hints and attempts to answer*"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="10dp"
        />
    <TextView
        android:id="@+id/streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      	android:text="Your Longest Streak: "
      	android:layout_below="@id/improveCompleteness"
      	android:paddingBottom="10dp"
      	android:paddingTop="5dp"
        />
