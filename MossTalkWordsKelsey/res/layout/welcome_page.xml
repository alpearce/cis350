<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white" >

    <TextView
        android:id="@+id/welcomeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Welcome!"
        android:textColor="#000000"
        android:textSize="60sp" 
        android:shadowColor="#999999"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="0.01" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a word set:"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_below="@+id/welcomeView"
        android:paddingTop="100dp"
        android:layout_centerHorizontal="true"
        android:textStyle="italic" />

    <LinearLayout 
          android:id="@+id/buttonlayout"
          android:layout_width="wrap_content"
  		  android:layout_height="wrap_content"
  		  android:layout_centerVertical="true"
  		  android:layout_centerHorizontal="true"
  		  android:orientation="vertical" >

        
    <Button
        android:id="@+id/livingeasy"
        style="@style/ButtonText"
        android:background="@drawable/btn_blue_matte"
        android:onClick="onClickLivingEasy"
        android:text="Living things | Easy" />

    <Button
        android:id="@+id/nonlivingeasy"
        style="@style/ButtonText"
        android:background="@drawable/btn_blue_matte"
        android:onClick="onClickNonLivingEasy"
        android:text="Non-living things | Easy" />

    <Button
        android:id="@+id/livingmedium"
        style="@style/ButtonText"
        android:background="@drawable/btn_orange_matte"
       android:onClick="onClickLivingMedium"
        android:text="Living things | Medium" />

    <Button
        android:id="@+id/nonlivinghard"
        style="@style/ButtonText"
        android:layout_marginBottom="37dp"
        android:background="@drawable/btn_red_matte"
        android:onClick="onClickNonLivingHard"
        android:text="Non-living things | Hard" />

    <Button
        android:id="@+id/livinghard"
        style="@style/ButtonText"
        android:background="@drawable/btn_red_matte"
        android:onClick="onClickLivingHard"
        android:text="Living things | Hard" />
    
    </LinearLayout>

</RelativeLayout>