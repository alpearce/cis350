<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/welcomeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Welcome!"
        android:textColor="#000000"
        android:textSize="60sp" 
        android:shadowColor="#999999"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="0.01" />

    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a word set:"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_below="@+id/welcomeView"
        android:paddingTop="100dp"
        android:layout_centerHorizontal="true"
        android:textStyle="italic" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        android:paddingTop="50dp"
        android:alignmentMode="alignBounds"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true" >
      
         	<ImageView
		         android:id="@+id/thumblivingeasy"
		         android:background="@drawable/tree"
		    	 android:layout_width="100dp"
		    	 android:layout_height="100dp"
		    	 android:layout_column="0"
		    	 android:layout_row = "0"
	           	 android:layout_gravity="right"
	           	 android:paddingLeft="50dp"
	         ></ImageView>
         	
         	 <Button
		        android:id="@+id/livingeasy"
		        style="@style/ButtonText"
		        android:background="@drawable/button_blue"
		        android:onClick="onClickLivingEasy"
		        android:text="Living things" 
		        android:layout_column="1"
           	 	android:layout_row="0"
           	 	android:layout_gravity="center"
           	 	 />
         	    	 
			 <RatingBar 
		        android:id="@+id/scoreBar1"
		        android:numStars="3"
		        android:rating="0"
		        style="?android:attr/ratingBarStyleIndicator"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="9.5dp"
		        android:paddingBottom="9.5dp"
		        android:layout_column="2"
		        android:layout_row="0"
           	 	android:layout_gravity="left"
		        />
         	 
         	<ImageView
		         android:id="@+id/thumbnoneasy"
		         android:background="@drawable/bed"
		    	 android:layout_width="100dp"
		    	 android:layout_height="100dp"
		    	 android:layout_column="0"
		    	 android:layout_row = "1"
	           	 android:layout_gravity="right"
	           	 android:paddingLeft="50dp"
	         ></ImageView>
        
         	 <Button
		        android:id="@+id/nonlivingeasy"
		        style="@style/ButtonText"
		        android:background="@drawable/button_blue"
		        android:onClick="onClickNonLivingEasy"
		        android:text="Non-living things"
		        android:layout_column="1"
		        android:layout_row="1"
           	 	android:layout_gravity="center" />
			
         	 <RatingBar 
		        android:id="@+id/scoreBar2"
		        android:numStars="3"
		        android:rating="0"
		        style="?android:attr/ratingBarStyleIndicator"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="9.5dp"
		        android:paddingBottom="9.5dp"
		        android:layout_column="2"
		        android:layout_row="1"
           	 	android:layout_gravity="left"
		        />
         	
         	<ImageView
		         android:id="@+id/thumblivingmed"
		         android:background="@drawable/flower"
		    	 android:layout_width="100dp"
		    	 android:layout_height="100dp"
		    	 android:layout_column="0"
		    	 android:layout_row = "2"
	           	 android:layout_gravity="right"
	         ></ImageView>
        
         	  <Button
		        android:id="@+id/livingmedium"
		        style="@style/ButtonText"
		        android:background="@drawable/button_orange"
		       android:onClick="onClickLivingMedium"
		        android:text="Living things" 
		        android:layout_column="1"
		        android:layout_row="2"
           	 	android:layout_gravity="center"/>
		
         	    <RatingBar 
		        android:id="@+id/scoreBar3"
		        android:numStars="3"
		        android:rating="0"
		        style="?android:attr/ratingBarStyleIndicator"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="9.5dp"
		        android:paddingBottom="9.5dp"
		        android:layout_column="2"
		        android:layout_row="2"
           	 	android:layout_gravity="left"
		        />
         	
         	<ImageView
		         android:id="@+id/thumblivinghard"
		         android:background="@drawable/pineapple"
		    	 android:layout_width="100dp"
		    	 android:layout_height="100dp"
		    	 android:layout_column="0"
		    	 android:layout_row = "3"
	           	 android:layout_gravity="right"
	         ></ImageView>
         	
         	 <Button
		        android:id="@+id/livinghard"
		        style="@style/ButtonText"
		        android:background="@drawable/button_red"
		        android:onClick="onClickLivingHard"
		        android:text="Living things"
		        android:layout_column="1"
		        android:layout_row="3"
           	 	android:layout_gravity="center" />
		     
		     
		          <RatingBar 
		        android:id="@+id/scoreBar4"
		        android:numStars="3"
		        android:rating="0"
		        style="?android:attr/ratingBarStyleIndicator"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="9.5dp"
		        android:paddingBottom="9.5dp"
		        android:layout_column="2"
		        android:layout_row="3"
           	 	android:layout_gravity="left"
		        />
         	
         		<ImageView
		         android:id="@+id/thumbnonhard"
		         android:background="@drawable/soccerball"
		    	 android:layout_width="100dp"
		    	 android:layout_height="100dp"
		    	 android:layout_column="0"
		    	 android:layout_row = "4"
	           	 android:layout_gravity="right"
	         ></ImageView>
        
         		    
		    <Button
		        android:id="@+id/nonlivinghard"
		        style="@style/ButtonText"
		        android:background="@drawable/button_red"
		        android:onClick="onClickNonLivingHard"
		        android:text="Non-living things" 
		        android:layout_column="1"
		        android:layout_row="4"
           	 	android:layout_gravity="center"/>
		
		
		     <RatingBar 
		        android:id="@+id/scoreBar5"
		        android:numStars="3"
		        android:rating="0"
		        style="?android:attr/ratingBarStyleIndicator"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="9.5dp"
		        android:paddingBottom="9.5dp"
		        android:layout_column="2"
		        android:layout_row="4"
           	 	android:layout_gravity="left"
		        />        
       </GridLayout>
	
</RelativeLayout>
