<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/welcome" />
	<edu.cis350.ipaint.PaintBrushView android:id="@+id/pbv"
		android:layout_width="fill_parent" android:layout_height="350dp" />

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent">

		<edu.cis350.ipaint.PaletteView
		    android:layout_width="220dp"
		    android:layout_height="wrap_content" />
		
		<Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/clear" 
		    android:onClick="onClearButtonClick"/>
		
		<TextView android:id="@+id/timer"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    />
		    

	</LinearLayout>

</LinearLayout>




